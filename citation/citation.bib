	journal = {The New England journal of medicine},
	keywords = {Adult,Agranulocytosis,Clozapine,Drug Monitoring,Female,Follow-Up Studies,Humans,Incidence,Leukocyte Count,Male,Middle Aged,Proportional Hazards Models,Risk Factors,United States,adverse effects,blood,chemically induced,epidemiology},
