	author = {Meltzer, Herbert Y},
	doi = {10.1093/schbul/17.2.263},
	file = {:C$\backslash$:/Users/shingwan/Dropbox/Papers/The Mechanism of Action of Novel Antipsychotic Drugs.pdf:pdf},
